<!DOCTYPE html>
<html lang="en">

	<!-- header section end -->
  <!-- product section start -->
  <div class="product_section layout_padding" style="padding-bottom: 10px;">
    <div class="container">
      <div class="product_text">List of <span style="color: #5ca0e9;">toys</span></div>
      <div class="wrap">
        <div class="search">
          <form action="find">
            <input type="text" name="findName"  class="searchTerm" placeholder="Search a toy?" >
           <button class="fa fa-search" type="submit"></buttonclass> </button>
          </form>
           
        </div>
     </div>
     <style></style>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#ID</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Descrip</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(items){ %>
          <tr>
            <td> <a href="javascript:void(0)">#<%- items._id %></a></td>
            <td> <%- items.Name %></td>
            <td>
              <img src="/upload/<%=items.image; %>" style="width: 90px; height: 90;">
              </td>
            <td> <%- items.price %></td>
            <td> <%- items.quantity %></td>
            <td> <%- items.descrip %></td>
            <script>
              function showAlert() {
                 setTimeout(() => {
                     confirm('Toy name: <%- items.Name %> will be delete !')
                 }, 2);
              }
            </script>
            <td><form action="/delete/<%=items._id %>"><button onclick="showAlert()"  type="submit" class="btn btn-danger">Delete</button> </form> </td>
            <td><form action="/update/<%=items._id %>"><button  type="submit" class="btn btn-info">Update</button></form> </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      
      
      <% if (typeof messageDelete != 'undefined'){ %><h3> <%- messageDelete %> </h3><% }  %>
      <div class="see_main">
        <div class="see_bt" style="margin-bottom: 40px;"><a href="http://localhost:3200/page/newcat">Add More</a></div>
      </div>
    </div>
  </div>
  
  <!-- product section end -->
  <!-- footer section start -->

  <!-- copyright section end -->
  <!-- Javascript files-->
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/jquery-3.0.0.min.js"></script>
    <script src="js/plugin.js"></script>
    <!-- sidebar -->
    <script src="js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="js/custom.js"></script>
    <!-- javascript --> 
    <script src="js/owl.carousel.js"></script>
    <script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
    <script>
    $(document).ready(function(){
    $(".fancybox").fancybox({
        openEffect: "none",
        closeEffect: "none"
        })});
    </script>
    
</body>
</html>